/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run dincalcilab/samurai -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile ichorCNA'
    config_profile_description = 'Minimal test dataset to check pipeline function with ichorCNA caller and liquid_biopsy subworkflow.'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input  = 'https://github.com/DIncalciLab/samurai-test-data/raw/refs/heads/master/samplesheet.csv'

    // Genome references
    genome = 'hg38'
    
    // Skip alignment
    aligner = false
    analysis_type = 'liquid_biopsy'
    caller = 'ichorcna'
    igenomes_ignore = false
    binsize = 500
    normal_panel = "https://raw.githubusercontent.com/broadinstitute/ichorCNA/refs/heads/master/inst/extdata/HD_ULP_PoN_hg38_500kb_median_normAutosome_median.rds"
    ichorcna_gc_wig = "https://raw.githubusercontent.com/broadinstitute/ichorCNA/refs/heads/master/inst/extdata/gc_hg38_500kb.wig"
    ichorcna_map_wig = "https://raw.githubusercontent.com/broadinstitute/ichorCNA/refs/heads/master/inst/extdata/map_hg38_500kb.wig"
    ichorcna_centromere_file = "https://raw.githubusercontent.com/broadinstitute/ichorCNA/refs/heads/master/inst/extdata/GRCh38.GCA_000001405.2_centromere_acen.txt"
    ichorcna_reptime_wig = "https://raw.githubusercontent.com/GavinHaLab/ichorCNA/refs/heads/master/inst/extdata/Koren_repTiming_hg38_500kb.wig"
}
